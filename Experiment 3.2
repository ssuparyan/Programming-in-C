    int num = 1;

    for (int row = 1; row <= 3; row++) {
        // Print leading spaces
        for (int space = 1; space <= 3 - row; space++) {
            printf(" ");
        }

        for (int col = 1; col <= row; col++) {
            printf("%d ", num);
            num++;
        }

